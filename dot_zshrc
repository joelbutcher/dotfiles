## ANTIGEN CONFIG ##
####################
source /opt/homebrew/share/antigen/antigen.zsh

antigen use oh-my-zsh

antigen bundle macos
antigen bundle git
antigen bundle jj
antigen bundle composer
antigen bundle laravel
antigen bundle npm
antigen bundle yarn
antigen bundle command-not-found

antigen bundle zsh-users/zsh-autosuggestions
antigen bundle zsh-users/zsh-syntax-highlighting

antigen theme vercel/zsh-theme

antigen apply

## STARSHIP CONFIG ##
#####################
eval "$(starship init zsh)"
export STARSHIP_CONFIG=~/.config/starship/starship.toml

## GENERAL ##
#############
export EDITOR='nvim'
export CODE="$HOME/Code"
export GITUSER="joelbutcher"
export GHREPOS="$REPOS/github.com/$GITUSER"
export WORKSPACE=$HOME/workspace
export DOTFILES=$HOME/.local/share/chezmoi
export SCRIPTS="$WORKSPACE/scripts"

## PATH ##
##########
export PATH=$HOME/bin:$SCRIPTS:$PATH
export GOROOT=/usr/local/go
export GOPATH=$HOME/go
export LOCAL_BIN=$HOME/.local
export PATH=$GOPATH/bin:$GOROOT/bin:$LOCAL_BIN/bin:$PATH

# GPG Signed Commits
export GPG_TTY=$(tty)
gpgconf --launch gpg-agent

export NVM_DIR="$HOME/.config/nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# Laravel Herd PHP configuration
export PATH="$HOME/Library/Application Support/Herd/bin/":$PATH
export HERD_PHP_84_INI_SCAN_DIR="$HOME/Library/Application Support/Herd/config/php/84/"
export HERD_PHP_85_INI_SCAN_DIR="$HOME/Library/Application Support/Herd/config/php/85/"
